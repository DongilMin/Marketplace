<!-- res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarketPlace" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Text styles -->
    <style name="TextAppearance.MarketPlace.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_size_display</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.MarketPlace.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.MarketPlace.Title" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.MarketPlace.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_body_large</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.MarketPlace.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.MarketPlace.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_label</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Card styles -->
    <style name="Widget.MarketPlace.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/elevation_small</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.MarketPlace.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/primary_variant</item>
    </style>

    <style name="Widget.MarketPlace.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/primary</item>
    </style>

    <style name="Widget.MarketPlace.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/primary</item>
    </style>

    <!-- Chip styles -->
    <style name="Widget.DrivingCoach.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textSize">@dimen/text_size_label</item>
        <item name="chipMinHeight">48dp</item>
        <item name="chipMinTouchTargetSize">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="chipCornerRadius">@dimen/chip_corner_radius</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Widget.MarketPlace.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textSize">@dimen/text_size_label</item>
        <item name="chipMinHeight">32dp</item>
        <item name="chipCornerRadius">@dimen/chip_corner_radius</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Tab layout style -->
    <style name="Widget.MarketPlace.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabSelectedTextColor">@color/primary</item>
        <item name="tabTextColor">@color/text_secondary</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>

    <!-- Toolbar style -->
    <style name="Widget.MarketPlace.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="subtitleTextColor">@color/text_secondary</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Bottom Navigation style -->
    <style name="Widget.MarketPlace.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/primary</item>
        <item name="itemTextColor">@color/primary</item>
        <item name="android:background">@color/white</item>
        <item name="elevation">@dimen/elevation_medium</item>
    </style>

    <!-- Progress Bar style -->
    <style name="Widget.MarketPlace.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/primary</item>
        <item name="android:progressBackgroundTint">@color/divider</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>
</resources>