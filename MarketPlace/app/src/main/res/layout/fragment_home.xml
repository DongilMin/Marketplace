<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_light"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">

        <!-- Welcome Title -->
        <TextView
            android:id="@+id/text_welcome_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_title"
            android:textAppearance="?attr/textAppearanceHeadline1"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Welcome Subtitle -->
        <TextView
            android:id="@+id/text_welcome_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/welcome_subtitle"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/text_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_welcome_title" />

        <!-- Content when there are sessions -->
        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_has_sessions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="text_latest_session,card_latest_session,button_view_dashboard" />

        <!-- Content when there are no sessions -->
        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_no_sessions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="text_no_sessions,text_start_first,button_start_new_session" />

        <!-- Latest Session Label -->
        <TextView
            android:id="@+id/text_latest_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/latest_session"
            android:textAppearance="?attr/textAppearanceHeadline3"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_welcome_subtitle" />

        <!-- Latest Session Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_latest_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_latest_session">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Session Date -->
                <TextView
                    android:id="@+id/text_session_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    app:layout_constraintEnd_toStartOf="@id/chip_status"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="May 15, 2025" />

                <!-- Session Duration -->
                <TextView
                    android:id="@+id/text_session_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="@color/text_secondary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_session_date"
                    tools:text="45 min" />

                <!-- Pass/Fail Status Chip -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/status_pass"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Passed" />

                <!-- Score Label -->
                <TextView
                    android:id="@+id/text_score_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/overall_score"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textColor="@color/text_secondary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_session_duration" />

                <!-- Score Value -->
                <TextView
                    android:id="@+id/text_score_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAppearance="?attr/textAppearanceHeadline1"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_score_label"
                    tools:text="85"
                    tools:textColor="@color/score_good" />

                <!-- Score Rating -->
                <TextView
                    android:id="@+id/text_score_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_score_value"
                    tools:text="Good"
                    tools:textColor="@color/score_good" />

                <!-- Category Scores Section -->
                <LinearLayout
                    android:id="@+id/layout_category_scores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    app:layout_constraintTop_toBottomOf="@id/text_score_rating">

                    <!-- Speed Score -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/speed_score"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/text_speed_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textAppearance="?attr/textAppearanceHeadline3"
                            android:textStyle="bold"
                            tools:text="80"
                            tools:textColor="@color/score_good" />
                    </LinearLayout>

                    <!-- Turning Score -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/turning_score"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/text_turning_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textAppearance="?attr/textAppearanceHeadline3"
                            android:textStyle="bold"
                            tools:text="90"
                            tools:textColor="@color/score_excellent" />
                    </LinearLayout>

                    <!-- Braking Score -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/braking_score"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/text_braking_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textAppearance="?attr/textAppearanceHeadline3"
                            android:textStyle="bold"
                            tools:text="85"
                            tools:textColor="@color/score_good" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Instructor Feedback Label -->
                <TextView
                    android:id="@+id/text_feedback_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/instructor_feedback"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    app:layout_constraintTop_toBottomOf="@id/layout_category_scores" />

                <!-- Instructor Feedback Content -->
                <TextView
                    android:id="@+id/text_feedback_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="@color/text_secondary"
                    android:maxLines="3"
                    android:ellipsize="end"
                    app:layout_constraintTop_toBottomOf="@id/text_feedback_label"
                    tools:text="Overall good driving. Maintain consistent speed on highways. Right turns executed well. Pay more attention to complete stops at intersections." />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- View Dashboard Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_view_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/view_dashboard"
            android:textAllCaps="false"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/card_latest_session" />

        <!-- Quick Actions Section -->
        <LinearLayout
            android:id="@+id/layout_quick_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@id/button_view_dashboard">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_start_session"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="@string/start_new_session"
                android:textAllCaps="false"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_view_history"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/view_history"
                android:textAllCaps="false"
                app:cornerRadius="8dp" />
        </LinearLayout>

        <!-- No Sessions Message -->
        <TextView
            android:id="@+id/text_no_sessions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/no_sessions_yet"
            android:textAppearance="?attr/textAppearanceHeadline3"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_welcome_subtitle" />

        <TextView
            android:id="@+id/text_start_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/start_first_session"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_no_sessions" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_start_new_session"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/start_new_session"
            android:textAllCaps="false"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_start_first" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>