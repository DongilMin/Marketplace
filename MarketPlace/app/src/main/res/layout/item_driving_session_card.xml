<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 날짜 및 시간 -->
        <TextView
            android:id="@+id/text_session_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="오늘" />

        <TextView
            android:id="@+id/text_session_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="오후 2:30"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/text_session_date"
            app:layout_constraintStart_toEndOf="@id/text_session_date"
            tools:text="오후 2:30" />

        <!-- 점수 표시 -->
        <LinearLayout
            android:id="@+id/layout_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_session_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:text="85"
                tools:textColor="@color/score_good" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="점수"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 상태 배지들 -->
        <LinearLayout
            android:id="@+id/layout_badges"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@id/layout_score"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_session_date">

            <!-- 합격/불합격 배지 -->
            <TextView
                android:id="@+id/badge_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_green_background"
                android:paddingStart="12dp"
                android:paddingTop="6dp"
                android:paddingEnd="12dp"
                android:paddingBottom="6dp"
                android:text="합격"
                android:textColor="@color/badge_green_text"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="합격" />

            <!-- 소요 시간 배지 -->
            <TextView
                android:id="@+id/badge_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/badge_outline_background"
                android:paddingStart="12dp"
                android:paddingTop="6dp"
                android:paddingEnd="12dp"
                android:paddingBottom="6dp"
                android:text="45분"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                tools:text="45분" />
        </LinearLayout>

        <!-- 세부 점수 프로그레스 바 -->
        <LinearLayout
            android:id="@+id/layout_progress_bars"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/layout_score"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_badges">

            <!-- 속도 제어 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="속도"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

                <ProgressBar
                    android:id="@+id/progress_speed"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:max="100"
                    tools:progress="80" />

                <TextView
                    android:id="@+id/text_speed_score"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="80"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="end"
                    tools:text="80" />
            </LinearLayout>

            <!-- 회전 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="회전"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

                <ProgressBar
                    android:id="@+id/progress_turning"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:max="100"
                    tools:progress="90" />

                <TextView
                    android:id="@+id/text_turning_score"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="90"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="end"
                    tools:text="90" />
            </LinearLayout>

            <!-- 제동 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="제동"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

                <ProgressBar
                    android:id="@+id/progress_braking"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:max="100"
                    tools:progress="85" />

                <TextView
                    android:id="@+id/text_braking_score"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="85"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="end"
                    tools:text="85" />
            </LinearLayout>
        </LinearLayout>

        <!-- 화살표 아이콘 -->
        <ImageView
            android:id="@+id/icon_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="@color/text_hint"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/layout_progress_bars"
            android:contentDescription="상세 보기" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>